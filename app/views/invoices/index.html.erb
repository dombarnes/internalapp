<h1>Invoices</h1>
<br>
<%= link_to 'New Invoice', new_invoice_path %>
<br>
<h2>Unpaid Invoices</h2>
<table id="outstanding">
  <tr>
    <th>Invoice date</th>
    <th>Date sent</th>
    <th>Company</th>
    <th>Total</th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= link_to invoice.invoice_date.strftime("%d/%m/%y"), invoice %></td>
    <td><%= invoice.date_sent %></td>
    <td><%= Company.find(invoice.company_id).company_name %></td>
    <td><%= invoice.total %></td>
  </tr>
<% end %>
</table>
