<% if signed_in? %>
<h1>Welcome</h1>
<p>Please use the navigation at the top to move around, or select from the items below.</p>
<%= render 'dashboard' %>
<%= render :partial => 'shared/mac_quotes', :mac_quotes => @mac_quote %>
<%= render :partial => 'shared/ios_quotes', :install_quotes => @ios_quote %>

    	<% else %>
		<header class="subnav new">
		    <h2><Strong>Internal App</Strong></h2>
		</header>
		<div class="joininfo">
		  <p>
		    This is the home page for the
		    <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
		    sample application.
		  </p>
		</div>
		<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
		<% end %>

<% content_for :sidebar do %>
<h3>Latest Tweets</h3>
<div id="twitter">
	<ul id="twitter_update_list"></ul>
	<script type="text/javascript" src="http://twitter.com/javascripts/blogger.js"></script>
		<script type="text/javascript" src="http://twitter.com/statuses/user_timeline/macbyteuk.json
		?callback=twitterCallback2&count=4"></script>
</div>
<% end %>
