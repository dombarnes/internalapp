<h1>Listing tasks</h1>

<table>
  <tr>
	<th></th>
    <th>Task</th>
    <th>Due date</th>
    <th>Category</th>
    <th>Private</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
	<td><%= check_box task.completed, task.completed %></td>
    <td><%= link_to task.task, task %></td>
    <td><%= task.due_date %></td>
    <td><%= task.category %></td>
    <td><%= task.private %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
