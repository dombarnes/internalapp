<h1>All people</h1>
<%= form_tag people_path, :method => 'get', :remote => true, :id => "people_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :first_name => nil %>
  </p>
<div id="people">
<% end %>

<%= link_to 'New Client', new_person_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Last name</th>
    <th>First name</th>
    <th>Company</th>
    <th></th>
  </tr>
  
<% @person.each do |p| %>
  <tr>
    <td><%= p.title %></td>
    <td><%= p.first_name %></td>
    <td><%= p.last_name %></td>
    <td><%= link_to Company.find(p.company_id).company_name, Company.find(p.company_id) %></td>
    <td><%= link_to 'Edit', edit_people_path(person) %></td>
  </tr>
<% end %>
