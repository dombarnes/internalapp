<h1>All people</h1>
<%= form_tag people_path, :method => 'get', :remote => true, :id => "people_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :first_name => nil %>
  </p>
<% end %>

<%= link_to 'New Person', new_person_path %>

<div id="people">

<table class="index">
<% @people.each do |person| %>
  <tr id="row_person">
    <td><h3><%= link_to person.first_name + " " + person.last_name, person_path(person) %></h3></td>
    <td><%= person.position %> at <%= link_to Company.find(person.company_id).company_name, Company.find(person.company_id) %></td>
  </tr>
<% end %>
</table>

<br />
</div>
<% content_for :sidebar do %>
<% end %>
