<h1>All people</h1>
<%= form_tag people_path, :method => 'get', :remote => true, :id => "people_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :first_name => nil %>
  </p>

<div id="people">
<% end %>

<%= link_to 'New Person', new_person_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Last name</th>
    <th>First name</th>
    <th>Company</th>
    <th></th>
  </tr>
  
<%= @people.each do |person| %>
  <tr>
    <td><%= person.title %></td>
    <td><%= person.first_name %></td>
    <td><%= person.last_name %></td>
    <td><%= link_to Company.find(person.company_id).company_name, Company.find(person.company_id) %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
  </tr>
<% end %>
</table>

<br />

