<% content_for :sidebar do %>
  <h3>Ad Hoc Sidebar</h3>
	<p>There will be some content here. Probably a list of last edited content.
<% end %>


<h1>Ad Hoc Support</h1>
<p>Below is a list of ad-hoc support days provided.
<p>
<%= link_to 'New Adhoc support', new_adhoc_support_path %>
<table class="pretty">
  <tr>
    <th><%= sortable "date" %></th>
    <th><%= sortable "job_type", "Type" %></th>
    <th>Technicians</th>
    <th>Company Name</th>
    <th></th>
  </tr>

<% @adhoc_supports.each do |adhoc_support| %>
  <tr>
    <td><%= link_to adhoc_support.date.strftime("%d/%m/%Y"), adhoc_support %></td>
    <td><%= adhoc_support.job_type %></td>
    <td><%= adhoc_support.technicians %></td>
    <td><%= link_to Company.find(adhoc_support.company_id).company_name, Company.find(adhoc_support.company_id) %></td>
    <td><%= link_to 'Delete', adhoc_support, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
