<h1>Recent iOS Quotes</h1>
<%= link_to ' Back', root_path %><br>
<br>
<% if can? :create, @ios_quote %>
<%= link_to 'New Quote', new_ios_quote_path %><br>
<% end %>
<br>
<table>
  <tr>
    <th>Date</td>
    <th>Customer</th>
    <th>Quantity</th>
    <th>Install Cost</th>
    <th>Support Cost</th>
  </tr>
<% @ios_quotes.each do |ios_quote| %>
	<tr>
		<td><%= link_to ios_quote.created_at.strftime("%d/%m/%Y"), ios_quote %></td>
		<td><%= ios_quote.customer %></td>
		<td><%= ios_quote.device_quantity %></td>
		<td><%= number_to_currency(ios_quote.install_cost, :unit => "&pound;") %></td>
		<td><%= number_to_currency(ios_quote.support_cost, :unit => "&pound;") %></td>
	</tr>
<% end %>
</table>

<br />
<%= will_paginate @ios_quotes %>
