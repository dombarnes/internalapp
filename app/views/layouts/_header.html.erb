<header>
<div class="header">
	<%= link_to logo , root_path, :class => :headerimg %>
  	<div id="global_nav">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <% if current_user %>
      <% if permitted_to? :manage, :companies %>
        <li><%= link_to "Companies", companies_path %></li>
        <li><%= link_to "People", people_path %></li>
        <li><%= link_to "Ad Hoc Support", adhoc_supports_path %></li>
      <% end %>
      <% if permitted_to? :create, :ios_quotes %>
        <li><%= link_to "Quotes", quotes_path %></li>
      <% end %>
      <% if permitted_to? :manage, :users %>
      <li><%= link_to "Admin", admin_path %></li>
      <% end %>
      <% end %>
    </ul>
    </div>

	<div class="user_status">
		<ul>
      <% if current_user %>
        <li><%= link_to "Sign out", logout_path %></li>
        <li><%= link_to "Profile", current_user %></li>
      <% else %>
        <li><%= link_to "Sign up", signup_path, :class => :signin %></li>
		<li><%= link_to "Login", login_path, :class => :signin %></li>
      <% end %>
      <li><%= link_to "Help", help_path %></li>
	  </ul>
    </div>

</div>
</header>