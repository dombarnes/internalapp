<!DOCTYPE html>
<html>
  <head>
    <title>MacByte Ltd - <%= content_for?(:title) ? yield(:title) : "Internal Client Management Tool"%></title>
	<%= render 'layouts/stylesheets' %>
	<%= csrf_meta_tag %>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js", "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js" %>
	<%= javascript_include_tag :defaults %>
	<link type="text/css" href="css/smoothness/jquery-ui-1.8.11.custom.css" rel="Stylesheet" />	
  </head>
	<body>
	<div id="header" class>
  	  <%= render 'layouts/header' %>
	</div><!-- end header -->
	<div id="user_status">
      <% if current_user %>
        Welcome <%=h current_user.username %>! Not you? <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Sign up", signup_path %> or
        <%= link_to "log in", login_path %>.
      <% end %>
    </div>
	<div id="wrapper">
    	<div id="content">
      		<div id="sidebar">
        		<%= content_for?(:sidebar) ? yield(:sidebar) : render(:partial => 'layouts/sidebar') %>
      		</div><!-- end sidebar -->
      		<div id="main" class="round">
        		<% flash.each do |key, value| %>
          		<div class="flash <%= key %>"><%= value %></div>
        		<% end %>
        		<%= yield %>
      		</div><!-- end main -->
    	</div><!-- end content -->
	</div><!-- end wrapper -->	
  <div id="footer" class>
     <%= render 'layouts/footer' %>
  </div>
   <%= debug(params) if Rails.env.development? %>
	</body>
</html>