<h1>Login</h1>
<div id="loginform">
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
  <%= render "shared/error_messages", :target => @user_session %>
<p>
  <%= f.label :email %> <%= f.text_field :email %>
</p>
<p> 
 <%= f.label :password %> <%= f.password_field :password %>
</p>

<div class="login_submit">  
	<p><%= f.check_box :remember_me %> Remember me on this computer</p>
  	<p><%= f.submit "Login" %></p>
<% end %>
</div>

<strong>Help:</strong> <%= link_to "I forgot my password.", new_password_reset_path %>

