<h3 class="tabletitle">Latest iOS Deployment Quotes</h3>
<table class="quotetable">
  <tr>
    <th>Date</td>
    <th>Customer</th>
    <th>Quantity</th>
    <th>Install Cost</th>
    <th>Support Cost</th>
  </tr>
  <% unless @ios_quotes.empty? %>
    <% @ios_quotes.most_recentfive.each do |ios_quote| %>
    	<tr>
    		<td><%= ios_quote.created_at.strftime("%d/%m/%Y") %></td>
    		<td><%= link_to ios_quote.customer, ios_quote %></td>
    		<td><%= ios_quote.device_quantity %></td>
    		<td><%= number_to_currency(ios_quote.install_cost, :unit => "£") %></td>
    		<td><%= number_to_currency(ios_quote.support_cost, :unit => "£") %></td>
    	</tr>
    <% end %>
  <% else %>
  	<tr>
  		<td colspan="5">There are no quotes to show</td>
  	</tr>
  <% end %>
</table>
<%= link_to "Create a new iOS Install and Support Quote", new_ios_quote_path, :class => "new_item_link" %>
<div id="more_link">
  <%= link_to "More...", ios_quotes_path %></div>
