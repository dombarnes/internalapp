<br>
<h3>Latest Mac Quotes</h3>

<table>
  <tr>
    <th>Date</td>
    <th>Customer</th>
    <th>Quantity</th>
    <th>Install Cost</th>
    <th>Support Cost</th>
  </tr>
<% MacQuote.most_recentfive.each do |mac_quote| %>
	<tr>
		<td><%= mac_quote.created_at.strftime("%d/%m/%Y") %>
		<td><%= link_to mac_quote.customer_name, mac_quote %></td>
		<td><%= mac_quote.client_quantity %></td>
		<td><%= number_to_currency(mac_quote.install_cost, :unit => "&pound;") %></td>
		<td><%= number_to_currency(mac_quote.support_cost, :unit => "&pound;") %></td>
	</tr>
<% end %>
</table>