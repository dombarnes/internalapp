<h1>Edit My Account</h1>
<%= render 'shared/error_messages', :target => @user %>
<%= form_for(@user, :remote => true) do |f| %>
  <%= render :partial => "form", :object => f %><br>
<h4>Company Information</h4>
<div class="field">
  <%= f.label :company_name %>
  <%= f.text_field :company_name %>
</div>
<div class="field">
  <%= f.label :job_title %>
  <%= f.text_field :job_title %>
</div>
<div class="field">
  	<%= f.label :role %><br />
  	<%= collection_select(:user, :role, Role.all, :id, :name, :prompt => true) %>
  </div>
  <div>
  <%= f.label :active %>
  <%= f.check_box :active %>
  </div>
  <div id="button">
  <a class="button" id="ios_quote_submit" name="commit" type="submit" href="#" onclick="submit()"><span>Update Profile</span></a>
  </div>
  <br>
<% end %>
<br>
<a class="button" id="user_destroy" name="commit" type="destroy" href="#" onclick="method:'delete'"><span>Delete User</span></a>

<%= link_to 'Destroy', :user, :confirm => 'Are you sure?', :method => :delete %>
<br><%= link_to "Back to Profile", @user %>