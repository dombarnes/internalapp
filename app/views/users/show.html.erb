<h2>My Profile</h2>
<p>
  <b>Email: </b>
  <%=h @user.email %>
</p>

<p>
  <b>Name:</b>
  <%=h @user.first_name %> <%=h @user.last_name %>
</p>

<% if has_role?(:admin) %>
  <p>
    <b>Role:</b>
  	<%= @user.role %>
  <br>	

  <p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>

<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>
<% end %>
<p>
<% if signed_in? %>
  <%= link_to 'Edit my details', edit_user_path(@user) %>
<% end %>

<h3>Roles</h3>
<% render :partial, role_list %>

<%= form_tag(:add_role, :admin, @user)  do %>
	<%= f.label :role, "Add role:" %>
	<%= f.text_field :role %>
	<%= f.submit %>
<% end %>

<%= link_to 'Back to User list', users_path %>