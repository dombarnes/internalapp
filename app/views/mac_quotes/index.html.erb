<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", mac_quotes_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_mac_quote_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> MacQuotes</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.mac_quote.customer_name", :default => t("activerecord.labels.customer_name", :default => "Customer_name")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @mac_quotes.each do |mac_quote| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= mac_quote.id %>
          </td>
                    <td>
            <%= link_to mac_quote.customer_name, mac_quote_path(mac_quote) %>
          </td>
                    <td>
            <%= mac_quote.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", mac_quote_path(mac_quote) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_mac_quote_path(mac_quote) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", mac_quote_path(mac_quote), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
